# CARINA Sandbox - Python Template
# Purpose: Data science, scripts, AI experimentation
# Security: Runs unprivileged, no host access

FROM python:3.12-slim

LABEL org.carina.template="python"
LABEL org.carina.version="0.1"
LABEL org.carina.description="Python sandbox for scripts and data science"

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

RUN pip install --no-cache-dir --upgrade pip

RUN useradd -m -s /bin/bash sandbox
USER sandbox
WORKDIR /home/sandbox

ENV PATH="/home/sandbox/.local/bin:${PATH}"

CMD ["python3"]
